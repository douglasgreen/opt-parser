{
    "name": "douglasgreen/opt-parser",
    "description": "Command-line option parser for PHP",
    "type": "library",
    "keywords": [
        "cli",
        "command",
        "command line",
        "command-line interface",
        "console",
        "option parser",
        "php",
        "php cli",
        "php scripting"
    ],
    "homepage": "https://github.com/douglasgreen/opt-parser",
    "license": "MIT",
    "authors": [
        {
            "name": "Douglas Green",
            "email": "douglas@nurd.site",
            "homepage": "https://nurd.site/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.93.1",
        "phpstan/phpstan": "^2.1.38",
        "rector/rector": "^2.3.6"
    },
    "autoload": {
        "psr-4": {
            "DouglasGreen\\OptParser\\": "src/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "lint": [
            "php-cs-fixer fix --dry-run --verbose",
            "phpstan analyse",
            "rector process --dry-run"
        ],
        "lint:fix": [
            "php-cs-fixer fix",
            "rector process"
        ]
    }
}
