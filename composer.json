{
    "name": "douglasgreen/opt-parser",
    "description": "Command-line option parser for PHP",
    "license": "MIT",
    "type": "library",
    "homepage": "https://github.com/douglasgreen/opt-parser",
    "authors": [
        {
            "name": "Douglas Green",
            "email": "douglas@nurd.site",
            "homepage": "https://nurd.site/",
            "role": "Developer"
        }
    ],
    "keywords": [
        "cli",
        "command",
        "command line",
        "command-line interface",
        "console",
        "option parser",
        "php",
        "php cli",
        "php scripting",
        "utility"
    ],
    "autoload": {
        "psr-4": {
            "DouglasGreen\\OptParser\\": "src/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/douglasgreen/config-setup"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "douglasgreen/config-setup": "dev-main",
        "phpstan/phpstan": "^1.11",
        "phpunit/phpunit": "^10.5",
        "rector/rector": "^1.2",
        "symplify/easy-coding-standard": "^12.3"
    },
    "scripts": {
        "lint": [
            "ecs",
            "phpstan analyse",
            "rector --dry-run"
        ],
        "lint:fix": [
            "ecs --fix",
            "rector"
        ],
        "post-install-cmd": "config-setup --pre-commit",
        "post-update-cmd": "config-setup --pre-commit",
        "test": "phpunit"
    }
}
